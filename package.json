{
  "name": "alkosto-monorepo",
  "version": "1.0.0",
  "description": "Monorepo del proyecto Alkosto - Frontend React + Backend API",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev:frontend": "cd frontend && npm start",
    "build:frontend": "cd frontend && npm run build",
    "test:frontend": "cd frontend && npm test",
    "install:frontend": "cd frontend && npm install",
    "dev:backend": "cd backend && python manage.py runserver",
    "setup:all": "npm run install:frontend",
    "clean:all": "Remove-Item -Path 'frontend/node_modules' -Recurse -Force -ErrorAction SilentlyContinue",
    "lint:frontend": "cd frontend && npm run lint",
    "format:all": "prettier --write '**/*.{js,jsx,ts,tsx,json,css,md}'"
  },
  "devDependencies": {
    "prettier": "^3.0.0",
    "concurrently": "^8.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jmgalvis12/Proyecto_Alkosto.git"
  },
  "keywords": [
    "react",
    "ecommerce",
    "alkosto",
    "frontend",
    "backend",
    "monorepo"
  ],
  "author": "Equipo Desarrollo Alkosto React",
  "license": "Private"
}
